<p id="notice"><%= notice %></p>

<h1><%= @user.fname + " " + @user.lname %>'s Posts</h1>

<table>
  <thead>
    <tr>
      <th id="title">title</th>
      <th id="content">content</th>
      <th id="edit">edit</th>
      <th id="delete">delete</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, user_post_path(user_id: session[:user_id], id: post.id) %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Edit', edit_user_post_path(user_id: session[:user_id], id: post.id) %></td>
        <td><%= link_to 'Destroy', user_post_path(user_id: session[:user_id], id: post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
